<!DOCTYPE html>
<html>
	<head>
		<title>40 Days - Exodus Church For Bloomington</title>
		<%= stylesheet_link_tag    "application" %>
		<%= javascript_include_tag "application" %>
		<%= csrf_meta_tags %>
	</head>
	<body>
		<div id="header">
			<!--<%= link_to '40 Days', days_path %>-->
			<div id="logo_container">
				<%= image_tag "logo.png", {:alt => "logo", :id => "logo"} %>
			</div>
			<div id="reflections">
				<div>
					Daily Reflections for the Exodus Community
				</div>
			</div>
			<div id="about">
				<div>
					<%= link_to 'About 40 Days', 'about.html' %>
				</div>
			</div>
		</div>
		<div style="clear:both" />

		<p class="notice"><%= notice %></p>
		<p class="alert"><%= alert %></p>

		<div>
			<p>This DIV is for the content area</p>
			<%= yield %>
		</div>

		<div>
			<p>Navigation</p>

			<% if contributor_signed_in? %>
				<div>
					<p><%= link_to 'My Devotions', devotions_path %></p>
					<p><%= link_to 'New Devotion', new_devotion_path %></p>
				</div>
			<% end %>

			<div>
				<% if contributor_signed_in? %>
					<p><%= link_to 'Contributor Log Out', destroy_contributor_session_path, method: :delete %></p>
				<% else %>
					<%= render 'subscriptions/form' %>
					<p><%= link_to 'Contributor Log In', new_contributor_session_path %></p>
					<p><%= link_to 'Contributor Sign Up', new_contributor_registration_path %></p>
				<% end %>
			</div>
		</div>

	</body>
</html>
